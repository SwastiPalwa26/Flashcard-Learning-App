<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.flashcardapp.controller.LoginController" spacing="10" alignment="CENTER" style="-fx-padding: 20px;">

    <Label text="Login/Register" />

    <Label text="Username:" />
    <TextField fx:id="usernameField" promptText="Enter your username" />

    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter your password" />

    
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" />

    <Label fx:id="errorMessageLabel" text="" style="-fx-text-fill: red;" />

</VBox>